<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- PRESSED -->
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/button_pressed" />
            <stroke
                android:width="1dp"
                android:color="@color/theme_white" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
        </shape>
    </item>

    <!-- DISABLED -->
    <item android:state_enabled="false">
        <shape >
            <solid
                android:color="@color/button_disabled"

                ></solid>
            <stroke
                android:width="1dp"
                android:color="@color/theme_white_transparent" />
            <corners
                android:radius="@dimen/base_radius" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- NORMAL -->
    <item>
        <shape>
            <solid android:color="@color/button_normal"></solid>
            <stroke
                android:width="1dp"
                android:color="@color/theme_white" />
            <corners
                android:radius="@dimen/base_radius" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>